html,
body
    font-size: 13px

body
    background-color: #e1e1e1

ul,
p,
h1,
h2,
h3
    margin: 0
    padding: 0

a
    text-decoration: none

li
    list-style-type: none

img
    height: auto
    max-width: 100%
    vertical-align: middle
    border: 0
    -ms-interpolation-mode: bicubic

.no-padding
    padding: 0!important

.page-wrapped
    padding-top: 50px

.sep10
    height: 10px

.iconfont
    color: #000
    opacity: .4

    &:hover
        color: #000
        opacity: .6

@media (max-width: 979px)
    .page-wrapped
        padding-top: 0
