@import '../../common/styles/mixi';

#nav-bar
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 50px
    background-color: #444
    z-index: 2

#nav-bar .inner
    width: 90%
    min-height: 40px
    margin: 0 auto
    padding: 5px

#nav-bar .logo,
#nav-bar .nav
    boxLeftFloat()

#nav-bar .logo
    width: 120px
    margin-left: -20px
    padding: 3px 20px
    height: 28px

#nav-bar .nav.float-right
    float: right

#nav-bar .nav > li
    boxLeftFloat()
    line-height: 20px

#nav-bar .nav > li > a
    display: block
    position: relative
    padding: 10px 15px
    color: #ccc
    text-decoration: none

#nav-bar .nav > li > a.active::after
    width: 100%
    left: 0

#nav-bar .nav > li > a::after
    position: absolute
    bottom: -5px
    left: 50%
    content: ''
    width: 0
    height: 3px
    background-color: #80bd01
    -webkit-transition: all .8s;
    transition: all .8s;

#nav-bar .nav > li > a:hover
    color: #fff
