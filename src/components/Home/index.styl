@import '../../common/styles/mixi';

#main
    wrappWidth()
    minAndMaxWidth()
    min-height: 450px
    margin: 15px auto

#content
    padding: 0
    margin-right: 305px

.panel
    margin-bottom: 15px;

@media (max-width: 979px)
    #main
        width: 100%
        min-width: 0
        margin: 15px 0
        min-height: 0

#sidebar
    float: right
    width: 290px

    .panel
        background-color: #f5f5f5

        .header
            .col_fade
                color: #444

        .inner
            a
                color: #778087

            ol
                margin: 4px 0
                padding: 0
                list-style: none

                li
                    line-height: 2em

        .friendship-community

            img
                width: 150px

.breadcrumb
    padding: 0
    margin: 0
    border: none
    background: 0 0

    li
        display: inline-block
        line-height: 20px

        .divider
            padding: 0 5px
            color: #ccc

    a
        color: #80bd01
