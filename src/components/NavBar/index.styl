@import '../../common/styles/mixi';

#nav-bar
    .inner
        width: 90%
        min-height: 40px
        margin: 0 auto
        padding: 5px

    .logo,
    .nav
        boxLeftFloat()

    .logo
        width: 120px
        margin-left: -20px
        padding: 3px 20px
        height: 28px

    .nav.float-right
        float: right

    .nav > li
        boxLeftFloat()
        line-height: 20px

    .nav > li > a
        display: block
        position: relative
        padding: 10px 15px
        color: #ccc
        text-decoration: none

    .nav > li > a.active::after
        transform: scaleX(1)

    .nav > li > a::after
        position: absolute
        bottom: -5px
        left: 0
        content: ''
        width: 100%
        height: 3px
        background-color: #80bd01
        transform: scaleX(0)
        transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms

    .nav > li > a:hover
        color: #fff

@media (max-width: 979px)
    #nav-bar
        position: static

        .inner
            text-align: center

        .logo,
        .nav.float-right
            display: inline-block
            float: none
            vertical-align: top

        .nav
            width: 100%
