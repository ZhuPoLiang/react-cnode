@import '../../common/styles/mixi';

.panel
    .header.topic-header
        background-color: #fff

        .topic-title
            margin: 12px 0
            font-weight: 700
            font-size: 22px
            line-height: 1.3
            vertical-align: bottom

        .changes
            font-size: 12px
            color: #838383

            span
                margin-right: 4px

            a
                color: inherit

    .topic-content
        padding: 10px
        color: #666
        border-top: 1px solid #e5e5e5

.markdown-text
    & > :first-child
        margin-top: 0

    p
        margin: 1em 0
        font-size: 15px
        line-height: 1.7em
        white-space: pre-wrap
        white-space: -moz-pre-wrap
        white-space: -pre-wrap
        white-space: -o-pre-wrap
        word-wrap: break-word
