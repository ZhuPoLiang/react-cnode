@import '../../common/styles/mixi';

.panel
    .header.topic-header
        background-color: #fff

        .topic-title
            margin: 12px 0
            font-weight: 700
            font-size: 22px
            line-height: 1.3
            vertical-align: bottom

        .changes
            font-size: 12px
            color: #838383

            span
                margin-right: 4px

            a
                color: inherit

    .topic-content
        padding: 10px
        color: #666
        border-top: 1px solid #e5e5e5

    .reply_content
        padding-left: 50px
        color: #333

.author_content
    .user_avatar
        display: inline-block
        float: left

        img
            width: 30px
            height: 30px
            border-radius: 3px

    .user_info
        margin-left: 10px
        display: inline-block

        .reply_author
            color: #666

        .reply_time
            padding-left: 4px
            color: #08c
            font-size: 11px

.markdown-text
    margin: 0 10px

    & > :first-child
        margin-top: 0

    a
        color: #08c

        &:hover
            color: #005580
            text-decoration: underline

    p
        margin: 1em 0
        font-size: 15px
        line-height: 1.7em
        white-space: pre-wrap
        white-space: -moz-pre-wrap
        white-space: -pre-wrap
        white-space: -o-pre-wrap
        word-wrap: break-word

    ul, ol
        padding: 0
        margin: 0 0 10px 25px

    li
        font-size: 14px
        line-height: 2em

    ul
        li
            list-style-type: disc

    ol
        li
            list-style-type: decimal

blockquote
    padding: 0 0 0 15px
    margin: 0 0 20px
    border-left: 5px solid #eee

.reply-list.topic-list
    .cell:hover
        background-color: transparent
